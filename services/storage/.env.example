# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/storage?schema=public"

# Service
PORT=4001
# MUST match the JWT_SECRET in the main service .env
JWT_SECRET="change-this-to-a-secure-secret-in-production"

# Storage Provider (s3 | cloudinary | imagekit | local)
STORAGE_TYPE="local"

# S3 Configuration
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""
# Optional: For compatible providers (MinIO, Contabo, DigitalOcean)
AWS_S3_ENDPOINT="" 
AWS_S3_FORCE_PATH_STYLE="false"

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# ImageKit Configuration
IMAGEKIT_PUBLIC_KEY=""
IMAGEKIT_PRIVATE_KEY=""
IMAGEKIT_URL_ENDPOINT=""

# Local Storage (development)
LOCAL_STORAGE_PATH="./uploads"
LOCAL_STORAGE_URL="http://localhost:4001/uploads"

